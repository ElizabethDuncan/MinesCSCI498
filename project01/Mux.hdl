/** 
 * Multiplexor.  If sel=0 then out = a else out = b.
 */

CHIP Mux {

    IN  a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=nsel);
	And(a=a, b=nsel, out=x);
	And(a=b, b=sel, out=y);
	Or(a=x, b=y, out=out);
}
